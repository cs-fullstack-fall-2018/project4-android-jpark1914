<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:visibility="visible"
            app:srcCompat="@mipmap/ic_cake"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/recipeNameViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@id/imageViewDetail"/>

        <TextView
            android:id="@+id/descriptionViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@id/recipeNameViewDetail"/>

        <TextView
            android:id="@+id/dateViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@id/descriptionViewDetail"/>

        <TextView
            android:id="@+id/ingredientsViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@id/dateViewDetail"/>

        <TextView
            android:id="@+id/instructionViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredientsViewDetail"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="TextView" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</ScrollView>